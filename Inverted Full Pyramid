* * * * * *
 * * * * *
  * * * *
   * * *
    * *
     *

//Code

#include <iostream>
using namespace std;
int main()
{
  int n;
  cin >> n;

  for (int i = 0; i < n; i++)
  {
    // space
    for (int j = 0; j < i; j++)
    {
      cout << " ";
    }
    // stars
    for (int j = 0; j < 2 * (n - i - 1) + 1; j++)
    {
      if (j % 2 == 0)
        cout << "*";
      else
        cout << " ";
    }
    cout << endl;
  }
}
